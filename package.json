{
  "name": "clovie",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:watch": "concurrently \"npm run test:watch -w clovie\"",
    "docs": "npm run dev -w @clovie/docs",
    "docs:build": "npm run build -w @clovie/docs",
    "clean": "npm run clean --workspaces || true",
    "lint": "npm run lint --workspaces || true",
    "format": "npm run format --workspaces || true"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
